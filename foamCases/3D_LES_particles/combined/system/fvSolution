FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       0.1;

    }

    pFinal
    {
        $p;
        smoother        DICGaussSeidel;
        tolerance       1e-4;
    }

    "(U|k|nuTilda).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-4;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors    2; // for higly non-orthogonal cells (otherwise = 1)
    nCorrectors                 1;
}

