FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      cloudProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type                cloud;

solution
{
    maxCo                       0.3;
    coupled                     false;
    transient                   yes;
    cellValueSourceCorrection   off;

    interpolationSchemes
    {
        rho             cell;
        U               cellPoint;
        mu              cell;
    }

    integrationSchemes
    {
        U               Euler;
    }
}

constantProperties
{
    rho0            1000;
}

subModels
{
    particleForces
    {
        sphereDrag;
        gravity;
    }

    injectionModels
    {
        mouth
        {
            type                patchInjection;
            SOI                 0;              // start of injection
            duration            10;             // injection duration
            parcelsPerSecond    10000;          // no. injetion locations
            patchName           "mouth";
            U0                  (0 0 0);
            //massTotal           1e-3;
            //uniformParcelSize   volume;
            nParticle           1;              // testing only
            //flowRateProfile     constant 1;
            sizeDistribution                    // 90% of COVID-19 bioparticles are < 5 micrometre: https://www.tandfonline.com/doi/full/10.1080/23744235.2022.2140822
            {
                type            fixedValue;
                value           0.000005;
            }
        }
    }

    // particles' interaction with shield (required to remove solver crashing)
    patchInteractionModel       localInteraction;
    localInteractionCoeffs
    {
        patches
        (
            "(person|nostrils)"
            {
                type        stick;
            }
            "(atmos|wall|mouth|interface|interfaceShield|fan)"
            {
                type        escape;
            }
        );
    }

    // turn off other modelling
    dispersionModel             none;
    heatTransferModel           none;
    surfaceFilmModel            none;
    stochasticCollisionModel    none;
    collisionModel              none;
}


// ************************************************************************* //