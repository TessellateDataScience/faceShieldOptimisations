FoamFile
{
    version   2.0;
    format    ascii;
    class     dictionary;
    location  "system";
    object    meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Guidance: https://www.cfd-online.com/Forums/openfoam-community-contributions/198872-general-workflow-create-flawless-mesh-cfmesh.html

surfaceFile         "combined.ftr";

// global mesh size
maxCellSize	       15.06;           // perturb the mesh by ~ 0.001-0.01 increments

workflowControls
{
    //stopAfter         edgeExtraction;
}

// region (local) mesh refinement
objectRefinements
{  
    headRefine
    {
        type        box;
        cellSize    6.0;
        centre      (0 0 0);
        lengthX     200;
        lengthY     250;
        lengthZ     300;
    }

    nostrilRefine
    {
        type        box;
        cellSize    1.0;            // geometry resolution still stepwise when 'feature edging'?
        centre      (0 100 20);
        lengthX     15;
        lengthY     15;
        lengthZ     15;
    }
}

renameBoundary
{
    defaultType     wall;

    newPatchNames
    {
        "top"       { newName interfaceShield  ; type  patch; }
        "bottom"    { newName interfaceShield  ; type  patch; }
        "sideL"     { newName interfaceShield  ; type  patch; }
        "sideR"     { newName interfaceShield  ; type  patch; }
        "front"     { newName interfaceShield  ; type  patch; }
        "back"      { newName atmos      ; type  patch; }
    }
}

