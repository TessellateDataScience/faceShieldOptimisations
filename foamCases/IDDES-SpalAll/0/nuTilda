FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nuTilda;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    mouth
    {
        type            inletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }
    atmos
    {
        type            fixedValue;
        value           uniform 0;
    }
    baffle0
    {
        type            zeroGradient;
    }
    baffle1
    {
        type            zeroGradient;
    }
}


