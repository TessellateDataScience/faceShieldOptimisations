FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    empty
    {
        type            empty;
    }
    atmos
    {
        type            zeroGradient;
    }
    wall
    {
        type            noSlip;
    }
    mouth
    {
        type            turbulentInlet;
        referenceField  uniform (0 0 10);
        fluctuationScale (0.01 0.01 0.01);
    }
}


